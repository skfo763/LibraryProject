<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#a8e27e">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_local_library_black_24dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수도권 대학도서관 통합정보 시스템"
            android:textSize="13sp"
            android:textColor="#6c6c6c"/>

        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모두의 도서관"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#00b2ff"/>

        <EditText
            android:id="@+id/login_id"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/buttonstyle1"
            android:backgroundTint="#ffffff"
            android:hint="이메일 아이디"
            android:textSize="13dp"
            android:textColor="#424242"
            android:textColorHint="#424242"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/login_pw"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/buttonstyle1"
            android:backgroundTint="#ffffff"
            android:hint="비밀번호"
            android:textSize="13dp"
            android:textColor="#424242"
            android:textColorHint="#424242"
            android:gravity="center_vertical"/>

        <Button
            android:id="@+id/login_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonstyle1"
            android:backgroundTint="#66f2dd"
            android:text="앱 이름 계정으로 로그인"
            android:textSize="13sp"
            android:textColor="#3a3a3a"/>

        <Button
            android:id="@+id/login_find"
            android:background="@null"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="아이디/비밀번호 찾기"
            android:textColor="#626262"/>

        <Button
            android:id="@+id/login_signin"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="회원가입"
            android:textSize="15sp"
            android:textStyle="bold"/>

    </LinearLayout>



</LinearLayout>